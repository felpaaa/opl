--><project name="oplcockpits_buildcallbacks">
	
	<!-- 
	    Called whenever 'ant ear' is used. this callback can be used to modify the content of the ear file
	
	     ${ear.path}: 			path to ear
	 -->
	<macrodef name="oplcockpits_before_ear">
		<sequential>

			<!-- you can do anything before the EAR file is being packed -->
			
		</sequential>
	</macrodef>
	<macrodef name="oplcockpits_after_build">
		<sequential>

			<impexGenerate extname="oplcockpits"/>

		</sequential>
	</macrodef>

	<macrodef name="oplcockpits_before_build">
		<sequential>
			<oplcockpits_delete_web_dir/>
		</sequential>
	</macrodef>

	<macrodef name="oplcockpits_after_clean">
		<sequential>
			<oplcockpits_delete_web_dir/>
		</sequential>
	</macrodef>


	<macrodef name="oplcockpits_delete_web_dir">
		<sequential>
			<!-- This is required until PLA-10893 is fixed -->
			<echo level="info" message="Removing web directory for extension oplcockpits"/>
			<delete dir="${ext.oplcockpits.path}/web" quiet="true"/>
		</sequential>
	</macrodef>
	
    <macrodef name="oplcockpits_before_dist_copy">
        <sequential>

            <replaceregexp byline="true">
                <fileset dir="${ext.oplcockpits.path}">
                    <include name="**/*.java"/>
                    <include name="**/*.jsp"/>
                    <include name="**/*.tag"/>
                    <include name="**/*.xml"/>
                    <include name="**/*.impex"/>
                    <include name="**/*.csv"/>
                    <include name="**/*.vm"/>
                    <include name="**/*.properties"/>
                    <exclude name="**/buildcallbacks.xml"/>
                </fileset>
                <regexp pattern="(.+)TELCO_(START|END)(.+|)"/>
                <substitution expression=""/>
            </replaceregexp>
            
            <delete>
                <fileset dir="${ext.oplcockpits.path}" includes="**/*.deleted"/>
                <fileset dir="${ext.oplcockpits.path}" includes="**/leftblankintentionally.txt"/>
            </delete>
            
        </sequential>
    </macrodef>
	
</project>
